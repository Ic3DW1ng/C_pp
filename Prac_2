#include
using namespace std;

int main(){
int a;
setlocale(0, "");
cout << "Программа 'Времена года'"<< endl;
cout << "Выберете время года."<< endl;
cout << ""<< endl;
cout <<"[1] " << "Лето."<< endl;
cout <<"[2] "<< "Осень."<< endl;
cout <<"[3] "<< "Зима." << endl;
cout <<"[4] "<< "Весна." << endl;
cout << "Введите число..."<< endl;
cin >> a;

if (a == 1) {
	cout << "Лето. Стоит пить больше воды." << endl;

}
else if (a == 2) {
	cout << "Сейчас осень, следует одеться тепло и взять с собой зонт." << endl;
}
else if (a == 3) {
	cout << "Сейчас зима, следует одеться тепло и надеть варежки." << endl;
}
else if (a == 4) {
	cout << "Сейчас весна, нужно надесъть резиновые сапоги." << endl;
}
else {
	cout << "Ошибка ввода."<< endl;
}

return 0;
}
