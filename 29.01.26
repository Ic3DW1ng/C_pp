#include <iostream>
using namespace std;

int main() {
    setlocale(LC_ALL, "RU");
    const int W = 20; 
    const int H = 20; 
    while (true) {
        system("cls"); 
        cout << "[ + ] «Геометрические фигуры»\n\n";
        char sym;
        cout << "[ + ] Текстура: "; 
        if (!(cin >> sym)) break;
        int s = H / 2;
        int sx = W - s;
        int sy = H - s;
        cout << "\n[ + ] Результат:\n\n";
        int y = 0;
        while (y < H) {
            int x = 0;
            while (x < W) {
                if (x >= sx && y >= sy) cout << sym << " ";
                else if (x >= sx || y >= sy) cout << "\033[31m. \033[0m";
                else cout << "\033[32m. \033[0m";
                x++;
            }
            cout << "\n";
            y++;
        }
        cout << "\n";
        system("");
    }
    return 0;
}
